{
  "metadata": [
    {
      "src": [
        {
          "src": "../src/Core",
          "files": [
            "**/*.csproj"
          ]
        }
      ],
      "dest": "api/Core",
      "namespaceLayout": "flattened",
      "memberLayout": "samePage"
    },
    {
      "src": [
        {
          "src": "../src/Math",
          "files": [
            "**/*.csproj"
          ]
        }
      ],
      "dest": "api/Math",
      "namespaceLayout": "flattened",
      "memberLayout": "samePage"
    },
    {
      "src": [
        {
          "src": "../src/Networking",
          "files": [
            "**/*.csproj"
          ]
        }
      ],
      "dest": "api/Networking",
      "namespaceLayout": "flattened",
      "memberLayout": "samePage"
    }
  ],
  "build": {
    "content": [
      {
        "files": [
          "**/*.{md,yml}"
        ],
        "exclude": [
          "_site/**"
        ]
      }
    ],
    "resource": [
      {
        "files": [
          "media/favicon.ico",
          "**/*.png",
          "**/*.jpg",
          "**/*.mp4"
        ]
      }
    ],
    "output": "_site",
    "template": [
      "default",
      "modern"
    ],
    "globalMetadata": {
      "_appName": "KorpiEngine",
      "_appFooter": "Made with <3",
      "_appTitle": "KorpiEngine",
      "_appLogoPath": "media/logo_64x64.png",
      "_appFaviconPath": "media/favicon.ico",
      "_enableSearch": true,
      "pdf": false,
      "_disableBreadcrumb": true
    },
    "sitemap":{
      "baseUrl": "https://japsuu.github.io/KorpiEngine",
      "priority": 0.1,
      "changefreq": "monthly",
      "fileOptions":{
        "**/api/**.yml": {
          "priority": 0.3
        },
        "**/getting-started.md": {
          "baseUrl": "https://dotnet.github.io/KorpiEngine/manual",
          "priority": 0.8
        }
      }
    }
  }
}